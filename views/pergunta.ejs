<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
    <hr class="line">
    <h1 style='color: white'><%= pergunta.titulo %></h1>
    <p style='color: gray'><%= pergunta.descricao %></p>
    <hr class="line">
    <form method="POST" action="/responder">
      <h3 style='color: white'>Responda</h3>
      <label style='color: white'>Resposta:</label>
      <textarea name="corpo" placeholder="Digite sua resposta..." class="form-control"></textarea><br>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
      <button class="btn btn-primary">Responder</button>
    </form>
    <hr class="line">
    <h3 style='color: white'>Respostas</h3>
    <hr class="line">
    <% respostas.forEach(resposta => { %>
      <br>
      <div class="card">
        <div class="card-body">
          <p><%= resposta.corpo %></p>
        </div>
      </div>
    <% }) %>
  </div>
</body>
<%- include('partials/footer.ejs') %>
